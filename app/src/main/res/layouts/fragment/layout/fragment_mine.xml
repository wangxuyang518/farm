<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/mFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <project.widget.ArcView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:arcHeight="26dp"
            app:bgColor="@color/colorAccent"
            />
        <ImageView

            android:src="@mipmap/mine_bg"
            android:layout_width="match_parent"
            android:layout_height="140dp" />
        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivUser"
                android:src="@mipmap/mine_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/ivUser"
                android:id="@+id/tvName"
                android:layout_alignTop="@id/ivUser"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:text="王思聪"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@id/tvName"
                android:layout_marginTop="4dp"
                android:layout_alignLeft="@id/tvName"
                android:layout_toRightOf="@id/ivUser"
                android:id="@+id/tvPhone"
                android:text="1882752012"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@id/tvName"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:text="实名认证"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"

                android:background="@drawable/mine_identifiy"
                android:layout_marginLeft="15dp"
                android:layout_alignBaseline="@id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </FrameLayout>
