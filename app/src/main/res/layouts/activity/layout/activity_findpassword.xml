<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg">

    <ImageView
        android:id="@+id/ivBack"
        android:src="@mipmap/icon_back"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/login_relayout_bg"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <TextView
            android:id="@+id/tvRegister"
            android:layout_marginTop="30dp"
            android:textColor="@color/text_color"
            android:text="输入新密码"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/mRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRegister"
            android:layout_marginTop="25dp">
            <ImageView
                android:id="@+id/icon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/login_ionc7" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/icon3"
                android:layout_alignTop="@id/icon3"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/icon3"
                android:background="@null"
                android:hint="姓名"
                android:singleLine="true"
                android:textSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/icon3"
                android:layout_marginTop="6dp"
                android:background="@color/divide_line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mRelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mRelativeLayout"

            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/icon4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/login_icon3" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/icon4"
                android:layout_alignTop="@id/icon4"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/icon4"
                android:background="@null"
                android:hint="手机号"
                android:singleLine="true"
                android:textSize="16dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/icon4"
                android:layout_marginTop="6dp"
                android:background="@color/divide_line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mRelativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mRelativeLayout1"

            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/icon5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/login_icon6" />
            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/icon5"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/icon5"
                android:layout_centerVertical="true"
                android:background="@drawable/login_tv_bg"
                android:padding="5dp"
                android:text="获取验证码"
                android:textColor="#92DC98"
                android:textSize="14dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/icon5"
                android:layout_alignTop="@id/icon5"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@id/tvMessage"
                android:layout_toRightOf="@id/icon5"
                android:background="@null"
                android:hint="输入验证码"
                android:singleLine="true"
                android:textSize="16dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/icon5"
                android:layout_marginTop="6dp"
                android:background="@color/divide_line" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/mRelativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mRelativeLayout2"

            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/icon6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/login_icon4" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/icon6"
                android:layout_alignTop="@id/icon6"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/icon6"
                android:background="@null"
                android:hint="输入密码 (6-12位)"
                android:singleLine="true"
                android:textSize="16dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/icon6"
                android:layout_marginTop="6dp"
                android:background="@color/divide_line" />
        </RelativeLayout>
        <Button
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/mRelativeLayout3"
            android:layout_marginTop="25dp"
            android:background="@drawable/login_bt_bg"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </RelativeLayout>
</RelativeLayout>