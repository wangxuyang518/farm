<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg_color">

    <RelativeLayout
        android:id="@+id/mR1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_height"

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/login_layout_marginLeft"
        android:layout_marginRight="@dimen/login_layout_marginLeft"
        android:layout_marginTop="@dimen/login_layout_marginTop"
        android:background="@drawable/login_ed_bg"
        android:paddingBottom="@dimen/login_paddingBottom"
        android:paddingLeft="5dp"
        android:paddingRight="@dimen/login_paddingRight"
        android:paddingTop="@dimen/login_paddingTop">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/icon_password"
                android:layout_width="@dimen/login_image_width"
                android:layout_height="@dimen/login_image_width"
                android:paddingLeft="@dimen/login_layout_marginBottom"
                android:src="@mipmap/ic_launcher" />

            <View
                android:id="@+id/line"
                android:layout_width="@dimen/login_line_height"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/login_layout_marginBottom"
                android:layout_marginLeft="@dimen/login_layout_marginTop8dp"
                android:layout_marginTop="@dimen/login_layout_marginBottom"
                android:layout_toRightOf="@id/icon_password"
                android:background="@color/divide_line" />

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:background="@drawable/login_tv_bg"
                android:padding="@dimen/login_paddingBottom"
                android:text="验证码"
                android:visibility="gone"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/etPassWord"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/login_layout_marginTop8dp"
                android:layout_toLeftOf="@id/tvMessage"
                android:layout_toRightOf="@id/line"
                android:background="@null"
                android:hint="密码"
                android:inputType="textPassword"
                android:maxLength="10"
                android:singleLine="true"
                android:textSize="15dp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mR"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_height"
        android:layout_above="@id/mR1"
        android:layout_marginLeft="@dimen/login_layout_marginLeft"
        android:layout_marginRight="@dimen/login_layout_marginLeft"
        android:background="@drawable/login_ed_bg"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/login_image_width"
                android:layout_height="@dimen/login_image_width"
                android:paddingLeft="@dimen/login_layout_marginBottom"
                android:src="@mipmap/ic_launcher" />

            <View
                android:layout_width="0.8dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:background="@color/divide_line" />

            <EditText
                android:id="@+id/etPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:background="@null"
                android:focusable="true"
                android:hint="手机号"
                android:inputType="phone"
                android:singleLine="true"
                android:textSize="15dp" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@id/mR"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:src="@mipmap/ic_launcher_round" />

    <Button
        android:id="@+id/btLogin"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/mR1"
        android:layout_marginLeft="@dimen/login_layout_marginLeft"
        android:layout_marginRight="@dimen/login_layout_marginLeft"
        android:layout_marginTop="35dp"
        android:background="@drawable/login_bt_bg"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="17dp" />

    <RelativeLayout
        android:id="@+id/mR3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tvLoginMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:text="验证码登录"
            android:textColor="#257c5a"
            android:textSize="15dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/mR3"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0.8dp"

            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#bbbbbb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   或者   "
            android:textColor="#257c5a"
            android:textSize="16dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0.8dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#bbbbbb" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvForgetPassWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btLogin"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:text="忘记密码?"
        android:textColor="#257c5a"
        android:textSize="15dp" />
</RelativeLayout>